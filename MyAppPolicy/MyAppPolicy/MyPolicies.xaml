                <!--Lpased Policy -->
                <xct:Expander x:Name="ExpanderLpasedPolicy" CollapseAnimationLength="250">
                    <xct:Expander.Header>
                        <Grid ColumnSpacing="0" BackgroundColor="#EFF1F5" VerticalOptions="Fill" HorizontalOptions="Fill">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>

                            <Grid Margin="20,0,20,2" BackgroundColor="Transparent" ColumnSpacing="0" VerticalOptions="Fill" HorizontalOptions="Fill">
